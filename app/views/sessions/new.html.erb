<div class="w3-container">
    <div class="w3-container w3-orange w3-hover-yellow">
<h1>THIS WEBSITE IS LOCKED BY USERS</h1>
<p></p>
<div class="w3-alert">
<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %></p>
<% end %>

</div>
<%= form_tag do %>
<legend>Please Log In</legend>
<div class="w3-panel">

<%= label_tag :name, 'Name:' %>

<%= text_field_tag :name, params[:name], class:"w3-input w3-border" %>
</div>

<div class="w3-panel">
<%= label_tag :password, 'Password:' %>
<%= password_field_tag :password, params[:password], class:"w3-input w3-border" %>
</div>
<div class="w3-panel">
<%= submit_tag "Login", class:"w3-button w3-light-gray w3-border" %>
</div>
<% end %>
</div>