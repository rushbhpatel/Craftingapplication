<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= image_tag(product.image_url,class:'list_image') %></td>
        <td><%= number_to_currency(product.price) %>
        <%= button_to 'Add to Cart', line_items_path(product_id: product) %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, meathod: :delet, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>

